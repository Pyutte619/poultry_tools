<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/title_Hasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:maxLines="1"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/grass_primary"
        android:fontFamily="roboto"
        android:text="Hasil Kualitas Pakan"
        android:textSize="20dip"
        android:shadowColor="@color/grass_dark"
        />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linearLayout1"
    android:layout_below="@+id/title_Hasil"
    android:layout_alignLeft="@+id/button_back"
    android:layout_alignStart="@+id/button_back">
    <com.cengalabs.flatui.views.FlatTextView
        android:id="@+id/title_protein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:text="Protein Pakan "
        android:textSize="16dip"
        flatui:backgroundTint="@color/grass_light"
        flatui:fl_theme="@array/grass"
        />

    <com.cengalabs.flatui.views.FlatTextView
        android:id="@+id/title_energi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:maxLines="2"
        android:gravity="center_vertical"
        android:text="Energi
Metabolisme Pakan "
        android:textSize="16dip"
        flatui:backgroundTint="@color/grass_light"
        flatui:fl_theme="@array/grass"
        />

    <com.cengalabs.flatui.views.FlatTextView
        android:id="@+id/title_harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:maxLines="2"
        android:text="Jumlah Harga Pakan"
        android:gravity="center_vertical"
        android:textSize="16dip"
        flatui:backgroundTint="@color/grass_light"
        flatui:fl_theme="@array/grass"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_above="@+id/button_back"
        android:layout_toRightOf="@+id/linearLayout1"
        android:layout_toEndOf="@+id/linearLayout1">

        <com.cengalabs.flatui.views.FlatTextView
            android:id="@+id/text_protein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textSize="16dip"
            flatui:backgroundTint="@color/grass_light"
            flatui:fl_theme="@array/grass"
            />

        <com.cengalabs.flatui.views.FlatTextView
            android:id="@+id/text_energi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textSize="16dip"
            flatui:backgroundTint="@color/grass_light"
            flatui:fl_theme="@array/grass"
            />

        <com.cengalabs.flatui.views.FlatTextView
            android:id="@+id/text_harga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textSize="16dip"
            flatui:backgroundTint="@color/grass_light"
            flatui:fl_theme="@array/grass"
            />

    </LinearLayout>
    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Kembali"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        flatui:fl_textAppearance="fl_light"
        flatui:fl_theme="@array/grass"
        flatui:fl_blockButtonEffectHeight="3dp"
        android:layout_below="@+id/linearLayout1"
        android:layout_alignLeft="@+id/title_Hasil"
        android:layout_alignStart="@+id/title_Hasil" />


    <com.cengalabs.flatui.views.FlatButton
        android:id="@+id/button_lihatHarga"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Lihat Harga"
        android:layout_weight="1"
        flatui:fl_textAppearance="fl_light"
        flatui:fl_theme="@array/grass"
        flatui:fl_blockButtonEffectHeight="3dp"
        android:layout_alignTop="@+id/button_back"
        android:layout_alignRight="@+id/title_Hasil"
        android:layout_alignEnd="@+id/title_Hasil" />
</RelativeLayout>